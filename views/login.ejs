<% layout('layouts/boilerplate') %>
<div class="container">
  <h3 class="login-heading">Login</h3>
  <hr>
  <form action="/login" method="post">
  <div class="mb-3 row">
    <label for="staticEmail" class="col-sm-2 col-form-label login-labels">Email</label>
    <div class="col-sm-10">
      <input id="email" type="email" name="email" class="form-control movie-input1" required/>
    </div>
  </div>
  <div class="mb-3 row">
    <label for="username" class="col-sm-2 col-form-label login-labels">Username</label>
    <div class="col-sm-10">
      <input id="username" type="username" name="username" class="form-control movie-input1 " required/>
    </div>
  </div>
  <div class="mb-3 row">
    <label for="inputPassword" class="col-sm-2 col-form-label login-labels">Password</label>
    <div class="col-sm-10">
      <input type="password" name="password" class="form-control movie-input1" id="inputPassword" required/>
    </div>
  </div>
  <button class="btn btn-success">Submit</button>
</form>
</div>
